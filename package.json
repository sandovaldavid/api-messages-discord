{
  "name": "api-messages-discord",
  "version": "1.0.0",
  "main": "src/app.js",
  "type": "module",
  "engines": {
    "node": ">=22.13.1",
    "bun": ">=1.2.0"
  },
  "scripts": {
    "start": "bun run src/app.js",
    "dev": "bun --watch run src/app.js",
    "test": "bun test",
    "generate-key": "node -e \"import('./src/middleware/auth.js').then(auth => console.log(auth.generateApiKey()))\"",
    "format": "prettier --write \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "format:check": "prettier --check \"src/**/*.{js,jsx,ts,tsx,json,md}\"",
    "lint": "eslint \"src/**/*.{js,jsx,ts,tsx}\"",
    "build": "bun build ./src/app.js --target node --outdir dist"
  },
  "dependencies": {
    "cors": "^2.8.5",
    "discord.js": "^14.18.0",
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "joi": "^17.13.3",
    "mongoose": "^8.10.0",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "winston": "^3.17.0"
  },
  "devDependencies": {
    "@types/express": "^5.0.0",
    "eslint": "^9.20.1",
    "prettier": "^3.5.0"
  }
}